rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function signedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return signedIn()
        // Check if the user's UID exists in the 'admins' collection
        && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // Admin membership docs
    match /admins/{uid} {
      allow read: if signedIn() && request.auth.uid == uid;
      allow write: if false; // Only allow creation via backend/console
    }

    // Customer data
    match /users/{uid} {
      allow read, write: if signedIn() && request.auth.uid == uid;

      match /{subcollection}/{docId} {
        allow read, write: if signedIn() && request.auth.uid == uid;
      }
    }

    // Publicly readable, Admin writeable collections
    match /products/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /combos/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /hero_slides/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /testimonials/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /settings/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Orders
    match /orders/{id} {
      allow read, write: if signedIn();
    }
  }
}
